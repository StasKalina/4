        <Label Content="Черкаська філія" Margin="0,325,0,0" VerticalAlignment="Top" Height="60" Width="500" HorizontalAlignment="Center" FontSize="36" FontFamily="Times New Roman" Foreground="DarkBlue" HorizontalContentAlignment="Center" FontStyle="Italic" FontWeight="Bold">
            <Label.Style>
